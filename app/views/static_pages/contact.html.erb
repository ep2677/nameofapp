<h1>Contact Page</h1>

<div class="container-fluid row">
  <div class="col-md-3 col-lg-3 col-xs-3">
  </div>
  <form class="col-lg-6 col-md-6 col-xs-6">
    <div class="form-group">
      <label for="name">Name</label>
      <input class="form-control" id="name" name="name" placeholder="Enter your name" type="text" required>
      <p id="visible-name"></p>
      <label for="phone">Phone</label>
      <input class="form-control" maxlength="10" id="phone" name="phonenum" placeholder="Enter your phone number" type="tel">
      <p id="visible-phone"></p>
    </div>
    
    <div class="form-group">
      <label for="email">Email Address</label>
      <input class="form-control" id="email" name="email" placeholder="Enter your email address" type="email" required>
      <p id="visible-email"></p>
    </div>
    
    <div class="form-group">
      <label for="message">Message</label> 
      <textarea class="form-control message-box" cols="40" name="message" id="message" placeholder="Your message here" rows="5" style="resize:none" required></textarea>
      <p id="visible-comment"></p>
      <p id="charCount"></p>
    </div>
    
    <button type="submit" class="btn btn-default" id="button">Send Message</button>
  </form>
</div>
