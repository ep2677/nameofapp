<div id="new_listing">
<p id="notice"><%= notice %></p>
</div>

<div class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-xs-12 product_div">
    <p class="product_title"><%= @product.name %> </p>
    <section class="product_image"> 
      <% if @product.image_url.present? %>
        <%= image_tag(@product.image_url) %>
      <% end %>
    </section>
    <p class="product_description"> <%= @product.description %> 
    </p>
    <p> Colour: <%= @product.colour %></p>
    <p> Price: $<%= @product.price %> </p>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', :back %>
</div>
<div class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 col-xs-12 product_div">
  <h4> <span class="glyphicon glyphicon-pencil"></span> Comments </h4>

  <div>
    <%= render 'new_comment' %>
    <%= render 'comments' %>
   <%= @product.highest_rating_comment %>
  </div>
</div>