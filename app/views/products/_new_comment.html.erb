<% if signed_in? %>
  <h4> Add a review: </h4>
  <%= form_for([@product, @product.comments.build], remote:true) do |f| %>
    <p>
      <%= f.text_area :body, id:"comment_textarea" %>
    </p>
   
    <p>
      <div class="rating"></div>
    </p>

    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>